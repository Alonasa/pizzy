<!--Partially borowed from: https://bbbootstrap.com/snippets/bootstrap-ecommerce-shopping-cart-item-summary-44021562-->
<div class="card px-5 py-3">
    <% if (orders.length > 0) { %>
    <div class="row">
        <div class="col">
            <div class="title">
                <div class="row">
                    <div class="col text-start"><h4><b>Your Orders</b></h4></div>
                </div>
            </div>
            <% orders.forEach(order => { %>
               <% const orderDate = new Date(order.order_date).toISOString().split('T'); %>
            <div class="row border-top border-bottom my-3">
                <div class="row main align-items-center">
                    <div class="col-2"><img class="img-fluid" src="/img/pizza-slide1.jfif"></div>

                    <div class="col">
                        <div class="row text-muted"><%= orderDate[0] %> <span class="text-muted"><%= orderDate[1].split('.')[0] %></span></div>
                    </div>
                    <div class="col text-end">â‚¬ <%= order.order_summ %> <span><%= order.status %></span></div>

                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <% } else { %>
        <h3>No orders yet</h3>
    <% } %>

</div>